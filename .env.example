# AI API Keys
GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=your_openai_key_here (optional)

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_SECRET_KEY=your-secret-key-here  # Fallback for backwards compatibility

# Debug Settings (optional)
DEBUG_SESSIONS=false  # Set to 'true' to enable verbose session logging

# Redis Configuration (REQUIRED for session storage and OAuth)
# Get this from Upstash Redis: https://upstash.com/
REDIS_URL=rediss://default:your-password@your-redis.upstash.io:6379

# Supabase Configuration (for Google OAuth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_REDIRECT_URL=https://your-app.onrender.com/auth/callback

# Email Notifications (Flask-Mail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=lyak.resell.genie@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_DEFAULT_SENDER=lyak.resell.genie@gmail.com

# Database (PostgreSQL URL - required for production)
DATABASE_URL=postgresql://user:password@host:5432/database

# Cloud Storage (Cloudinary - FREE tier)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=resellgenie

# Optional: Use local storage (set to "false" for production with Cloudinary)
USE_LOCAL_STORAGE=true
