# AI API Keys
# Gemini API Keys - Round-robin failover for rate limit handling
# Get free keys from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY_1=your_gemini_key_1_here
GEMINI_API_KEY_2=your_gemini_key_2_here
GEMINI_API_KEY_3=your_gemini_key_3_here
# Legacy single key (if only using one key, set GEMINI_API_KEY_1 instead)
GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=your_openai_key_here (optional)

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here

# Redis (for server-side sessions in production - optional, falls back to filesystem)
# Example: redis://red-xxxxx:6379 or redis://localhost:6379
REDIS_URL=

# Google OAuth (for Google Sign-In)
# Get this from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
NOTIFICATION_FROM_EMAIL=your_email@gmail.com

# Database (leave empty for SQLite, or use PostgreSQL URL for production)
DATABASE_URL=

# Supabase Storage (REQUIRED for image uploads and analysis)
# Get these from: https://app.supabase.com → Your Project → Settings → API
SUPABASE_URL=https://your-project.supabase.co
# Use service_role key (bypasses RLS) for server-side operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
# Optional: Use anon key (has RLS restrictions - may cause download errors)
# SUPABASE_ANON_KEY=your-anon-key-here
# Optional: Bucket names (defaults shown below)
SUPABASE_BUCKET_TEMP=temp-photos
SUPABASE_BUCKET_DRAFTS=draft-images
SUPABASE_BUCKET_LISTINGS=listing-images
SUPABASE_BUCKET_VAULT=vault
SUPABASE_BUCKET_HALL=hall-of-records

# Cloud Storage (Cloudinary - DEPRECATED, use Supabase instead)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=rebel-operator

# Optional: Use local storage (set to "false" for production with Supabase)
USE_LOCAL_STORAGE=false

# =============================================================================
# Platform Search APIs (for better search features)
# =============================================================================

# eBay Browse API (REQUIRED for eBay search)
# Get credentials from: https://developer.ebay.com/my/keys
# Either set EBAY_PROD_B64 (base64 of APP_ID:CERT_ID) or both individual keys
EBAY_PROD_B64=
# Or use individual keys (will auto-generate B64):
# EBAY_PROD_APP_ID=your_app_id
# EBAY_PROD_CERT_ID=your_cert_id

# Etsy Open API v3 (REQUIRED for Etsy search)
# Get API key from: https://www.etsy.com/developers/your-apps
ETSY_API_KEY=

# Discogs API (OPTIONAL - improves rate limits from 25/min to 60/min)
# Get credentials from: https://www.discogs.com/settings/developers
DISCOGS_CONSUMER_KEY=
DISCOGS_CONSUMER_SECRET=

# Reverb API (REQUIRED for Reverb search)
# Get personal access token from: https://reverb.com/my/api_settings
REVERB_API_TOKEN=
