# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
# Generate a random secret key for production:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development  # Use 'production' for deployment

# Debug Settings (optional)
DEBUG_SESSIONS=false  # Set to 'true' to enable verbose session logging

# ============================================================================
# REDIS CONFIGURATION (REQUIRED for production)
# ============================================================================
# Get from: https://upstash.com (create a Redis database)
# Example: rediss://default:XXXXXX@us1-proper-mantis-12345.upstash.io:6379
REDIS_URL=

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================
# PostgreSQL URL from Supabase or other PostgreSQL provider
# Get from: Supabase → Settings → Database → Connection string (URI)
# Example: postgresql://postgres:[YOUR-PASSWORD]@db.abcdefgh.supabase.co:5432/postgres
DATABASE_URL=

# ============================================================================
# SUPABASE CONFIGURATION (for Google OAuth)
# ============================================================================
# Get from: Supabase → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
# OAuth redirect URL (optional - defaults to RENDER_EXTERNAL_URL/auth/callback in production)
SUPABASE_REDIRECT_URL=http://localhost:5000/auth/callback

# ============================================================================
# EMAIL CONFIGURATION (Flask-Mail)
# ============================================================================
# For Gmail, create an app password: https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Legacy SMTP variables (deprecated but still supported)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
NOTIFICATION_FROM_EMAIL=your-email@gmail.com

# ============================================================================
# AI API KEYS
# ============================================================================
GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=your_openai_key_here  # (optional)

# ============================================================================
# CLOUD STORAGE (Cloudinary - FREE tier)
# ============================================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=resellgenie

# Optional: Use local storage (set to "false" for production with Cloudinary)
USE_LOCAL_STORAGE=true
